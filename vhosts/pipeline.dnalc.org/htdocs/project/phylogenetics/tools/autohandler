<%init>
	my $s = $m->session->{pipeline};

	my $now = time();
	if ($s->{logged_in} && ($now - $s->{last} > 3600)) {
		$m->comp("/_message_add", "Your session has expired. Please login.");
		$s->{logged_in} = 0;
		delete $s->{logged_in};
		delete $s->{user_id};
	}
	$s->{last} = $now;
	#unless ($s->{logged_in}) {
	#	$m->redirect("/");
	#}
</%init>
