%#----------------------------------------------------------------------------
<%args>
	$pid => 0
</%args>
%#----------------------------------------------------------------------------
<%once>
	use DNALC::Pipeline::App::Phylogenetics::ProjectManager ();
</%once>
%#----------------------------------------------------------------------------
<%init>
	
	$r->content_type("chemical/seq-aa-fasta");
	$r->headers_out->{'Content-Disposition'} = "attachment;filename=trimmed_alignment.fasta";
	$r->no_cache(1);

	$m->session->{pipeline} ||= {};
	
	$pid =~ s/\D+//g;

	my $pm = DNALC::Pipeline::App::Phylogenetics::ProjectManager->new($pid);
	my $proj = $pm->project;
	my $trimmed_algn = $pm->get_alignment('fasta');
	$r->sendfile($trimmed_algn);
	
</%init>
%#----------------------------------------------------------------------------
<%flags>
	inherit => undef
</%flags>
%#----------------------------------------------------------------------------
<%attr>
	js => ['prototype-1.6.1.js', 'phylogenetics.js']
</%attr>
