<%args>
	$op => ''
	$data => ''
	$pid => 0
</%args>
<%once>
	use File::Slurp qw/read_file/;
	use DNALC::Pipeline::App::Phylogenetics::ProjectManager ();
	use DNALC::Pipeline::Config ();
	use JSON::XS ();
	use Data::Dumper;
</%once>
<%init>
	$r->content_type("text/html");
	my $gcf = DNALC::Pipeline::Config->new->cf("GREENLINE");
	#my $dir = $gcf->{PROJECTS_DIR} . '/fasta';
	my $pairs = undef;
	my @files = ();

	my $pm = DNALC::Pipeline::App::Phylogenetics::ProjectManager->new($pid);
	my $proj = $pm->project;
	unless ($proj) {
		#$m->comp('/_message_add', 'Project not found!', 'error');
		#$m->redirect('/project/');
		print "Project not found!";
		return;
	}
	
	my @sequences = $pm->sequences;
	
	if ($data) {
		my $json = JSON::XS->new->utf8;
		my $decoded_data = $json->decode($data);
		$pairs = ref $decoded_data eq "ARRAY" ? $decoded_data : [];
		for my $p (@$pairs) {
			my $pair = $pm->add_pair(
				{seq_id => $p->[0]->[0],
				 strand => $p->[0]->[1] ? "R" : "F",
				},
				{seq_id => $p->[1]->[0],
				 strand => $p->[1]->[1] ? "R" : "F",
				},
			);
			print "added pair ", $pair, $/;
		}
		$m->redirect("./pair?pid=" . $pid);
	}
	
</%init>
<%attr>
	js => ['prototype-1.6.1.js', 'phylogenetics.js']
</%attr>

