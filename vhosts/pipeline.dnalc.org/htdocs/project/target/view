if ($tp) {
	$status = $tp->status;
	my $workdir = $tp->work_dir;
	for (<$workdir/*>) {
		my $file = $m->comp('../.comp/filepath_to_web', file => $_, just_return => 1);
		if ($file =~ /\.(\w{2,5})$/) {
			$files{$1} = $file;
		}
	}
}
</%init>
