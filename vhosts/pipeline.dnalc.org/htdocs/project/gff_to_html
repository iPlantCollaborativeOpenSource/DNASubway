<%init>
	$r->content_type("text/html; charset=UTF-8");
	
	$f =~ s|\.+|.|g;
	$f =~ s|//|/|g;

	return '' if (!$f || !-f $r->document_root . $f);
	return if $m->cache_self(key => "gff-" . $f, expires_in => "2 hours");

