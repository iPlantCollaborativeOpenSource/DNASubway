%#-----------------------------------------------------------------
<%args>
	$pid => 0
	$jid => 0
	$d => 0
</%args>
<%once>
	use Data::Dumper;
	use DNALC::Pipeline::Utils qw(clean_query);
	use DNALC::Pipeline::NGS::JobOutputFile ();

	use DNALC::Pipeline::User ();

</%once>
<%init>

	$r->content_type("application/x-java-jnlp-file");
	$r->headers_out->{'Content-Disposition'} = "attachment;filename=igv.jnlp";

	my $stream;
	my $genome = "tair10";
	my @th_out_files = DNALC::Pipeline::NGS::JobOutputFile->search(job_id => $jid, project_id => $pid);

	my @jfiles = grep {$_->file->is_local && $_->file->file_path =~ /\.bam$/} @th_out_files;
	my ($junc_bed) = grep {$_->file->is_local && $_->file->file_path =~ /\.bed$/} @th_out_files;
	print STDERR "local: [$junc_bed]", $/;
	print STDERR "local: [@jfiles]", $/;
	my $jf = $jfiles[0];

	if ($jf) {
		$stream = $jf->file->file_path;
	}
	
	#---------------------------------------------
	if ($d) {
		# - dynamic
		@jfiles = grep {!$_->file->is_local && $_->file->file_path =~ /\.bam$/} DNALC::Pipeline::NGS::JobOutputFile->search(job_id => $jid, project_id => $pid);
		#@jfiles = DNALC::Pipeline::NGS::JobOutputFile->search(job_id => $jid, project_id => $pid);
		print STDERR "not local: [@jfiles]", $/;
		$jf = $jfiles[0];
		if ($jf) {
			print STDERR " -- stream = ", sprintf("http://pipeline-dev.dnalc.org/project/ngs/tools/stream_data/%d/%d.bam", $pid, $jf->file), $/;
			$stream = sprintf("http://pipeline-dev.dnalc.org/project/ngs/tools/stream_data/%d/%d.bam", $pid, $jf->file);
		}
	}	
	#---------------------------------------------
	
	# - dynamic
	#if ($jf) {
	#	$stream = sprintf("http://pipeline-dev.dnalc.org/project/ngs/tools/stream_data/%d/%d.bam", $pid, $jf->file);
	#}
	#$stream = "https://foundation.iplantc.org/io-v1/io/download/ghiban/archive/jobs/job-3601-nth/tophat_out/accepted_hits_sorted.bam";
</%init>
