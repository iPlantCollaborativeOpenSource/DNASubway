%#---------------------------------
<%once>
	use Time::Duration qw/duration/;
</%once>
%#---------------------------------
<%init>
	$m->session->{pipeline} ||= {};
	my $s = $m->session->{pipeline};

	my $now = time();
	if ($s->{logged_in} && ($now - $s->{last} > 3600)) {
		$m->comp("/_message_add", "It's been a while since your last visit: " . duration ($now - $s->{last}));
		#$s->{logged_in} = 0;
		#delete $s->{logged_in};
		#delete $s->{user_id};
	}
	$s->{last} = $now;
	#unless ($s->{logged_in}) {
	#	$m->redirect("/");
	#}
	
	my ($class_r, $class_y, $class_b) = ('', '', '');
	my $section = $m->request_comp->attr('current_section');

	if ($section eq 'red') {
		$class_r = 'current';
	}
	elsif ($section eq 'yellow') {
		$class_y = 'current';
	}
	elsif ($section eq 'blue') {
		$class_b = 'current';
	}
	
</%init>
