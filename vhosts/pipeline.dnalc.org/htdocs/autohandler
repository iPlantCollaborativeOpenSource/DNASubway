%#-------------------------------------------------------------------
<%args>
	$name => ''
	$passw => ''
	$guest => ''
	$login => ''
</%args>
%#-------------------------------------------------------------------
<%once>
	use DNALC::Pipeline::Utils qw/random_string/;
	use DNALC::Pipeline::User ();
</%once>
%#-------------------------------------------------------------------
<%init>
$m->session->{pipeline} ||= { username => "", logged_in => 0};
my $s = $m->session->{pipeline};

#print STDERR "name = $name//sess =$s->{username} \n";

my @err = ();

my $now = time();
my $delta = $now - $s->{last};
if ($s->{logged_in} && $delta > 3600) {
	$s->{logged_in} = 0;
	if ($delta < 5 * 3600) {
		$m->comp("/_message_add", "Your session has expired. Please login!");
	}
}
$s->{last} = $now;

</%init>
