%#-------------------------------------------------------------------
<%args>
</%args>
%#-------------------------------------------------------------------
<%once>
	use DNALC::Pipeline::Utils qw/random_string/;
	use DNALC::Pipeline::User ();
	use DNALC::Pipeline::Config ();
</%once>
%#-------------------------------------------------------------------
<%init>
my $pcf = DNALC::Pipeline::Config->new->cf("PIPELINE");
$m->session->{pipeline} ||= { username => "", logged_in => 0};
my $s = $m->session->{pipeline};

my $form_action = '/';
if ( exists $pcf->{SSL_LOGIN} && $pcf->{SSL_LOGIN}) {
	$form_action = $pcf->{PROJECT_HOME} . '/index.html';
	$form_action =~ s/^http:/https:/;
}

my @err = ();

my $now = time();
my $delta = $now - $s->{last};
if ($s->{logged_in} && $delta > 3600) {
	$s->{logged_in} = 0;
	if ($delta < 5 * 3600) {
		$m->comp("/_message_add", "Your session has expired. Please login!");
	}
}
$s->{last} = $now;

</%init>
